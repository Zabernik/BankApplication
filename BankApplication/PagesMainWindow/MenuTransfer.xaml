        <Label Grid.Column="1" Content="Cykliczne przelewy określonej kwoty z konta klienta&#xD;&#xA;na inny rachunek" HorizontalAlignment="Left" Height="41" Margin="223,155,0,0" VerticalAlignment="Top" Width="328" Foreground="#FFC5BE8E"/>
        <Label Grid.Column="1" Content="Konkretny przelew służący do wpłat podatków &#xD;&#xA;PIT,CIT oraz VAT" HorizontalAlignment="Left" Height="41" Margin="223,225,0,0" VerticalAlignment="Top" Width="328" Foreground="#FFC5BE8E"/>
        <Label Grid.Column="1" Content="Zapisani odbiorcy z ich numerami bankowymi lub numerami telefonów" HorizontalAlignment="Left" Height="41" Margin="223,317,0,0" VerticalAlignment="Top" Width="389" Foreground="#FFC5BE8E"/>

    </Grid>
</Page>
